<h1 style="text-align:center; margin-bottom:24px;">🖼️ Gerenciar Slides</h1>

<div class="card">
  <table class="table" style="width:100%; border-collapse:collapse;">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Badge</th>
        <th>Imagem</th>
        <th>Ordem</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (slides.length) { %>
        <% slides.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.titulo %></td>
            <td><%= s.badge || '-' %></td>
            <td><img src="<%= s.imagem_url %>" alt="<%= s.titulo %>" style="width:120px;border-radius:8px"></td>
            <td><%= s.ordem || 1 %></td>
            <td>
              <a href="/admin/slides/editar/<%= s.id %>" class="btn-sm">✏️ Editar</a>
              <a href="/admin/slides/excluir/<%= s.id %>" class="btn-sm btn-danger" onclick="return confirm('Excluir slide <%= s.titulo %>?')">🗑️ Excluir</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="6" style="text-align:center;">Nenhum slide cadastrado.</td></tr>
      <% } %>
    </tbody>
  </table>

  <div style="text-align:center; margin-top:20px;">
    <a href="/admin/slides/novo" class="btn">➕ Adicionar Slide</a>
  </div>
</div>

<div style="text-align:center; margin-top:30px;">
  <a href="/admin/" style="color:var(--primary); font-weight:600; text-decoration:none;">← Voltar ao painel</a>
</div>
