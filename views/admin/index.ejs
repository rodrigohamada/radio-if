<!-- ESTILIZAÇÃO LOCAL -->
<!-- ====================== -->
<style>
  /* Grid responsivo */
  .admin-grid {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    margin-bottom: 40px;
  }

  /* Card base */
  .admin-card {
    background: var(--white);
    text-align: center;
    text-decoration: none;
    padding: 24px;
    border: 1px solid #eee;
    border-radius: 12px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, .06);
    transition: transform .2s, box-shadow .2s;
  }

  /* Hover */
  .admin-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, .12);
  }

  /* Título */
  .admin-card h2 {
    font-size: 20px;
    font-weight: 800;
    color: #3c1771;
    margin-bottom: 10px;
  }

  /* Texto */
  .admin-card p {
    color: var(--muted);
    font-size: 15px;
    line-height: 1.5;
  }

  /* Responsivo */
  @media (max-width:768px) {
    .admin-card h2 {
      font-size: 18px;
    }
    .admin-card p {
      font-size: 14px;
    }
  }

  @media (max-width:480px) {
    .admin-card {
      padding: 20px;
    }
  }
</style>
