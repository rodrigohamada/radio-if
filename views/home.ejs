<!-- SLIDER PRINCIPAL (DIN√ÇMICO) -->
<!-- ============================ -->
<section class="slider neon-slider">
  <!-- Efeito de ondas sonoras no topo -->
  <div class="neon-wave"></div>

  <% if (slides && slides.length) { %>
    <% slides.forEach((s, i)=> { %>
      <div class="slide <%= i === 0 ? 'active' : '' %>" style="background-image: url('<%= s.imagem_url %>');"
        aria-label="<%= s.titulo || '' %>">

        <div class="slide-overlay"></div>

        <% if (s.badge) { %>
          <span class="badge neon-badge"><i class="fas fa-bolt"></i>
            <%= s.badge %>
          </span>
          <% } %>

            <div class="slide-content">
              <% if (s.titulo) { %>
                <h2 class="neon-title">
                  <%= s.titulo %>
                </h2>
                <% } %>

                  <% if (s.descricao) { %>
                    <p class="slide-description">
                      <%= s.descricao %>
                    </p>
                    <% } %>

                      <% if (s.link_url) { %>
                        <p style="margin-top:12px;">
                          <a href="<%= s.link_url %>" class="btn neon-btn"><i class="fas fa-play-circle"></i>
                            <%= s.link_label || 'Ouvir agora' %>
                          </a>
                        </p>
                        <% } %>
            </div>
      </div>
      <% }) %>
        <% } else { %>
          <!-- Fallback se n√£o houver slides -->
          <div class="slide active" style="background-image: url('/images/slide1.png');">
            <div class="slide-overlay"></div>
            <span class="badge neon-badge"><i class="fas fa-broadcast-tower"></i> Destaque</span>
            <div class="slide-content">
              <h2 class="neon-title">Ao Vivo Agora</h2>
              <p class="slide-description">Ou√ßa o melhor da nossa programa√ß√£o!</p>
            </div>
          </div>

          <div class="slide" style="background-image: url('/images/slide2.png');">
            <div class="slide-overlay"></div>
            <span class="badge neon-badge"><i class="fas fa-school"></i> IFSP</span>
            <div class="slide-content">
              <h2 class="neon-title">A r√°dio do IF Campinas!</h2>
              <p class="slide-description">Em sintonia com os estudantes</p>
            </div>
          </div>

          <div class="slide" style="background-image: url('/images/slide3.jpg');">
            <div class="slide-overlay"></div>
            <span class="badge neon-badge"><i class="fas fa-music"></i> M√∫sica</span>
            <div class="slide-content">
              <h2 class="neon-title">A sua m√∫sica est√° aqui!</h2>
              <p class="slide-description">Pe√ßa j√° a sua m√∫sica!</p>
            </div>
          </div>
          <% } %>
</section>

