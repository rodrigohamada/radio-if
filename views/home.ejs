<!-- SE√á√ïES PRINCIPAIS DA HOME -->
<!-- ============================ -->
<div class="grid cols-3 home-panels">

  <!--  AGORA NO AR -->
  <div class="card current-show">
    <h3 class="section-title">üéôÔ∏è Agora no ar</h3>

    <% if (currentProgram) { %>
      <div class="show-info">
        <div class="show-name"><%= currentProgram.name %></div>
        <div class="show-host">com <%= currentProgram.host %></div>
        <div class="show-time">‚è∞ <%= currentProgram.start_time %> ‚Äì <%= currentProgram.end_time %></div>
      </div>

      <div class="show-visual">
        <div class="sound-bars">
          <div></div><div></div><div></div><div></div><div></div>
        </div>
      </div>
    <% } else { %>
      <p>Nenhum programa ao vivo no momento.</p>
    <% } %>
  </div>

  <!--  PROGRAMAS DE HOJE -->
  <div class="card program-card">
    <div class="card-header">
      <i class="fas fa-calendar-day"></i>
      <h3>Programas de hoje</h3>
    </div>

    <% if (todayPrograms && todayPrograms.length) { %>
      <div class="program-grid">
        <% todayPrograms.forEach(p => { %>
          <div class="program-item">
            <div class="program-time">
              <i class="far fa-clock"></i>
              <span><%= p.start_time %> ‚Äì <%= p.end_time %></span>
            </div>
            <div class="program-info">
              <h4><%= p.name %></h4>
              <p><i class="fas fa-user"></i> <%= p.host %></p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="empty">Nenhum programa encontrado para hoje.</p>
    <% } %>
  </div>

  <!--  √öLTIMAS NOT√çCIAS -->
  <div class="card news-card">
    <div class="news-header">
      <h3 class="section-title"><i class="fas fa-newspaper"></i> √öltimas not√≠cias</h3>
    </div>

    <% if (recentNews && recentNews.length) { %>
      <ul class="news-list-home">
        <% recentNews.forEach(n => { %>
          <li class="news-item">
            <% if (n.imagem_url) { %>
              <div class="news-thumb">
                <img src="<%= n.imagem_url %>" alt="<%= n.titulo %>">
              </div>
            <% } %>
            <div class="news-content">
              <h4 class="news-title">
                <a href="/noticias#<%= n.id %>" class="news-link"><%= n.titulo %></a>
              </h4>
              <p class="news-preview"><%= n.conteudo.substring(0, 100) %>...</p>
              <a href="/noticias#<%= n.id %>" class="news-readmore">Ver not√≠cia</a>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="empty">Nenhuma not√≠cia dispon√≠vel no momento.</p>
    <% } %>

    <div class="see-all">
      <a href="/noticias" class="btn-news">Ver todas as not√≠cias</a>
    </div>
  </div>
</div>

